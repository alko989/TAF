{
  "title": "ICES Transparent Assessment Framework Stockassessment results upload",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "format for uploading age based stock assessment data",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "unit",
    "valueType",
    "stockCode",
    "activeYear",
    "repoTag",
    "values"
  ],
  "properties": {
    "unit": {
      "description": "The unit of the values",
      "type": "string"
    },
    "valueType": {
      "description": "The type of result, harvest, stock numbers, catch numbers, etc.",
      "type": "string",
      "enum": [
        "harvest"
      ]
    },
    "stockCode": {
      "description": "The ICES stock code",
      "type": "string"
    },
    "activeYear": {
      "description": "The year the assessment is valid for",
      "type": "integer",
      "minimum": 2010,
      "maximum": 2021
    },
    "repoTag": {
      "description": "The github repository followed by a @ then the commit reference or tag name",
      "type": "string",
      "pattern": "^[a-zA-Z0-9_\\.]+@?[a-zA-Z0-9_\\.]*$"
    },
    "values": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "minimum": 0
          },
          "year": {
            "type": "integer"
          }
        },
        "required": [
          "value",
          "year"
        ]
      },
      "minItems": 1
    }
  }
}
